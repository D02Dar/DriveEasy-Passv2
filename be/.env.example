# 服务器配置
NODE_ENV=development
PORT=:2607
FRONTEND_URL=http://localhost:2606

# 数据库配置 (复用原Next.js项目数据库)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=123456
DB_NAME=driving_assistant_dev

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 其他配置
BCRYPT_ROUNDS=12

# Foursquare Places API配置
FOURSQUARE_API_KEY=your-foursquare-api-key-here
